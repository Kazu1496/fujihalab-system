- provide(:title, "#{user_name(@user)}のプロフィール設定")
- if flash[:alert].present?
  %p= flash[:alert]

%h1 #{user_name(@user)}の詳細変更

= form_for @user do |f|
  .field
    = f.label :nickname
    = f.text_field :nickname, value: @user.nickname

  .field
    = f.label :picture
    = f.file_field :picture, id: "post_img"
    = user_image_tag(@user, "preview_img", 80, 80)
  .field
    = f.label :password
    = f.password_field :password

  .field
    = f.label :password_confirmation
    = f.password_field :password_confirmation

  .actions
    = f.submit

= link_to 'Back', user_path(@user)
