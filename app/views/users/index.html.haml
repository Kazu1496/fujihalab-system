- provide(:title, 'トップページ')
%p#notice= notice

%table
  %thead
    %tr
      %th 氏名
      %th 在室状況
      %th 総在室時間
      %th 詳細情報
  %tbody
    - @users.each do |user|
      %tr
        %td
          = image_tag user_image_exist(user), size: '50x50'
          = name = user.nickname.present? ? user.nickname : user.name
        %td= user.status == 1 ? '入室中' : '退室中'
        - total_time = 0
        - Existence.where(user_id: user.id).each do |existence|
          - stay_time = stay_time(existence)
          - total_time += stay_time.to_i
        %td #{total_time} 時間
        %td= link_to 'Show', user
