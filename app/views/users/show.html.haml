- provide(:title, "#{@user.name}の情報")
%p#notice= notice

%p
  %strong 名前:
  = @user.name
  - image_url = @user.image.present? ? @user.image.retina.to_s : "no_image.png"
  = image_tag(image_url, size: '100x100')

%p
  %strong 在室状況:
  = @user.status == 1 ? '入室中' : '退室中'

%p
  %strong 総在室時間:
  #{@total_time} 時間

%p
  %strong 卒業まで:
  = 500 - @total_time
  時間

%p
  %strong プロフィール設定:
  = link_to "Edit", edit_user_path(@user)

%iframe{src: "https://pixe.la/v1/users/#{@user.name}/graphs/access-graph", width:"700", height: "150"}

%p
  %strong 過去30日の入室履歴:
%table
  %thead
  %tr
    %th 入室日
    %th 入室時間
    %th 退室時間
    %th 在室時間
    %th 編集
  %tbody
    - @user.existences.order_by_enter_at.each do |existence|
      %tr
        %td= existence.enter_time.strftime("%Y年%m月%d日")
        %td= datetime_encorder(existence.enter_time)
        %td= datetime_encorder(existence.exit_time)
        %td= stay_time(existence)
        %td= link_to "Edit", edit_user_existence_path(@user, existence.id)

= link_to 'Back', root_path
