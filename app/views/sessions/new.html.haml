- provide(:title, 'ログイン')

#signin_container
  %h1
    %span ログイン
    Sign in
  = form_for :session, url: login_path do |f|
    .field
      = f.label "ユーザー名"
      = f.text_field :name

    .field
      = f.label "パスワード"
      = f.password_field :password

    .action
      = f.submit 'ログイン'

    = link_to "ユーザー登録する", new_user_path, class: "back_btn"
